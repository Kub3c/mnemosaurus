@import 'reset.styl'
@import 'tomwork.functions.styl'

body
    background-color #222
    color #ffffff
    font-family sans-serif

button
    background transparent
    border 1px solid #ffffff
    color inherit
    cursor pointer
    font inherit
    outline 0
    padding .5em 1em
    transition .25s

    &:hover
        background #ffffff
        color #000000

h1
    font-size 2.5em

input
    border 0
    box-sizing border-box
    min-width 300px
    padding-left .4em
    padding-vertical .4em

.form-element
    align-items center
    display flex
    margin-bottom 10px

a
    font-color inherit
    text-decoration none
